@model WebStore.Web.Models.CreateAuctionViewModel

   <div class="row">
    <div align="left" class="col-md-6">@Html.ActionLink(Model.UserName, "Index", "User")</div>
    <div class="col-md-6" align="right">@Html.ActionLink(Model.Credit.ToString(), "Index", "Credit")</div>
</div>


    @using (Html.BeginForm("Create", "CreateAuction", FormMethod.Post))
    {
    <form method="post">

       
        <div>
            <label>Item Name:</label>
            <p>@Html.TextBoxFor(m => m.Name)</p>
        </div>

        <div>
            <label>Price:</label>
            <p>@Html.TextBoxFor(m => m.Price)</p>
        </div>

        <input type="submit" class="btn btn-default" value="Submit" />
    </form>
    }
