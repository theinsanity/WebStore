@model WebStore.Web.Models.AuctionViewModel

<div class="container-fluid">
 
    <div class="row">
    <div align="left" class="col-md-6">@Html.ActionLink(Model.UserName,"Index","User")</div>
    <div class="col-md-6" align="right">@Html.ActionLink(Model.Credit.ToString(), "Index", "Credit")</div>
    </div>

    <h1> All auctions</h1>
    <table class="table table-hover">
        @foreach (var auction in Model.Auctions)
        {
            <tr>
                <td>@auction.Id </td>
                <td >@auction.Name</td>
                <td>@auction.Price</td>
                <td >@auction.Seller.UserName</td>
                <td class="btn btn-default" align="right">@Html.ActionLink("Details", "Details", new { id = auction.Id})</td>
                <td class="btn-primary" align="center">@Html.ActionLink("Buy", "Buy", new { id=auction.Id })</td>
            </tr>
            
            
        }
     </table>
    </div>
        <p>@Html.ActionLink("Create new auction", "Index", "CreateAuction", null, new { @class = "btn btn-default" })</p>

